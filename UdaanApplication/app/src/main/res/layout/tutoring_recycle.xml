<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"

    android:background="@drawable/round_background_blue"
    android:layout_height="wrap_content">

    <TextView
        android:padding="10dp"
        android:id="@+id/subjectTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="subject"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/preferredTimeView"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:textColor="@color/white"
        android:layout_below="@+id/subjectTextView"
        android:layout_height="wrap_content"
        android:text="preferred time"/>
    <TextView
        android:padding="10dp"
        android:id="@+id/postedDateView"
        android:layout_width="match_parent"
        android:layout_below="@+id/preferredTimeView"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="posted date"/>

